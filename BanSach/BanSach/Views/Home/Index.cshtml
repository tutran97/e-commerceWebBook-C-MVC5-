@model PagedList.IPagedList<BanSach.Models.SachDetail>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<!--BANNER CHAY-->

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>*@
</head>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="container">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>

                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Content/NguoDungCssLayout/Uploads/shop292/images/anhbia4.jpg" alt="Los Angeles" style="width:100%;" />
                        </div>

                        <div class="item">
                            <img src="~/Content/NguoDungCssLayout/Uploads/shop292/images/anhbia1.jpg" style="width:100%;" />
                        </div>

                        <div class="item">
                            <img src="~/Content/NguoDungCssLayout/Uploads/shop292/images/anhbia3.jpg" style="width:100%;" />
                        </div>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    @*<div class="row">
        san pham moi
    </div>

    <div class="row">
        san pham hot
    </div>*@
    <br />
    
    <h1 style="margin-left:38%;display:inline-block;" class="title"><span>Tất Cả Sản Phẩm Mới Nhất</span></h1>
    @*<!--tim kiem-->
    <div>
        <div class="col-md-4">
            <input id="txtSearch" type="text" name="searchString" /><!--name = bien truyen vao controler-->
            <button onclick="search()">tìm kiếm</button>
        </div>
    </div>*@
    <div class="row">
        <div style="width:100%;" class="product-block product-grid clearfix">

            @foreach (var item in Model)
            {

                <div style="width:20%;" class="col-md-3 col-sm-3 col-xs-6 product-resize product-item-box">

                    <div class="product-item">
                        <div  class="image image-resize">
                            <a href="/Sach/ChiTietSanPham/@item.MaSach" title="@item.TenSach">
                                <img  src="\Content\NguoDungCssLayout\Uploads\shop292\images\@item.AnhBia" alt="@item.TenSach" class="img-responsive lazy-img" style="width:100%;height:310px;object-fit:fill;" />
                            </a>
                        </div>
                        <div class="right-block">
                            <h2 class="name">
                                <a style=" font-weight: bold;color: red;text-overflow: ellipsis;white-space: nowrap;width: 100%;overflow: hidden;display: block;" href="ChiTietSanPham/@item.MaSach" title="@item.TenSach">@item.TenSach</a>
                            </h2>
                            <div class="rating">
                                <div class="rating-1">
                                    <span class="rating-img">
                                    </span>
                                </div>
                            </div>
                            <div class="price">
                                <span style="text-decoration:line-through;margin-left:36%;color: #53afd8;
                                    font-size: 14px;
                                    font-weight: bold;" class="price-new"> @(String.Format("{0:#,##0;(£#,##0.00);Nothing}", item.GiaCu)) VNĐ</span><br />
                                <span style="margin-left:36%;color: #53afd8;
                                    font-size: 14px;
                                    font-weight: bold;" class="price-new">@(String.Format("{0:#,##0;(£#,##0.00);Nothing}", item.GiaBan))VNĐ</span>
                                </div>

                                <div class="button">
                                    <a style="margin-left:36%;" class="btn btn-default btn-add-cart" href="/Sach/ChiTietSanPham/@item.MaSach">Mua</a>
                                    <!--<a class="btn btn-default btn-add-cart" href="javascript:void(0)" onclick="AddToCard(9535,1)">Mua</a>-->
                                </div>
                            </div>
                    </div>

                </div>
            }


        </div>
        <!---->
        <!--PHÂN TRANG-->
        <div class="navigation">
            <ul class="pagination">
                <!--nut Lui-->
                <li>
                    <a href="?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li><a href="?page=1">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</a></li>
                <!--nut next-->
                <li>
                    <a href="?page=@Model.PageCount" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                <!--so trang-->
                <li> @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page })) </li>
            </ul>
        </div>

        <!--JS TIM KIEM-->
        <script>
            var link = '/sach ? timkiem =&chude=1&tacgia, int ? nxb, int ? page';

            function search() {
                window.location.href = '/home?timkiem=' + document.getElementById('txtSearch').value;
                //alert(window.location.href);
            }

        </script>
    </div>
</div>


